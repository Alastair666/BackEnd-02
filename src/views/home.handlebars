<div class="card-body m-0 p-3">
    <h4 class="mb-3">Lista de Productos Agregados</h4>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr class="bg-dark">
                <th scope="col" class="text-grey">#</th>
                <th scope="col" class="text-grey">Titulo</th>
                <th scope="col" class="text-grey">Descripci√≥n</th>
                <th scope="col" class="text-grey">Cod. Prod</th>
                <th scope="col" class="text-grey">Precio</th>
                <th scope="col" class="text-grey">Estatus</th>
                <th scope="col" class="text-grey">Stock</th>
                <th scope="col" class="text-grey">Categoria</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row" class="text-end">{{this.pid}}</th>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.code}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <h4>Da de alta tu producto nuevo</h4>
    <div class="row">
        <div class="card-body h-100">
            <div class="row">
                <div class="col mb-2">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column justify-content-start m-0 p-3">
                            <div class="d-flex flex-column">
                                <div class="text-alternate">Debes completar <strong>todos los campos</strong> para poder
                                    dar de alta tu registro.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer border-0 p-2 d-flex justify-content-end align-items-right align-items-center">
            <div class="btn-group m-0 p-0">
                <input type="submit" name="btnAltaProd" value="Alta" id="btnAltaProd" tabindex="2"
                    class="btn btn-secondary mb-1 active-scale-down">
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
